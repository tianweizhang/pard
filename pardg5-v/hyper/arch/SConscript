Import('*')

if env['TARGET_ISA'] == 'x86':
    Source('bios.cc')
    Source('glomgr.cc')
    Source('system.cc')
    Source('PARDg5VLDomain.cc')
    Source('guest/system.cc')
    Source('guest/linux/system.cc')

    SimObject('X86PARDg5VSystem.py')
    SimObject('GlobalManager.py')

    DebugFlag('GlobalManager')
    DebugFlag('GMMisc')
    DebugFlag('GMSend')
    DebugFlag('GMRecv')

    CompoundFlag('GMAll', [ 'GlobalManager', 'GMMisc', 'GMSend', 'GMRecv' ],
                 desc = 'All GlobalManager flags')
